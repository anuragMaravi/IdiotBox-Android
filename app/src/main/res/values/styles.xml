<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- No ActionBar theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar overlay theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Popup overlay theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Movie details theme -->
    <style name="MovieDetails" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="actionBarStyle">@style/action_bar_theme</item>
    </style>

    <!-- Main theme -->
    <style name="Main" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="actionBarStyle">@style/action_bar_theme</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/title_background</item>
        <item name="actionBarStyle">@style/action_bar_theme</item>
    </style>

    <!-- Custom action bar theme -->
    <style name="action_bar_theme">
        <item name="android:background">#b3000000</item>
    </style>

    <!-- Preferences theme -->
    <style name="PreferencesTheme">
        <item name="android:background">@color/background</item>
    </style>
</resources>
